<p id="notice"><%= notice %></p>

<h1>Menus</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Recipe</th>
      <th>Cooking time</th>
      <th>Image url</th>
      <th>Taste</th>
      <th>Hint1</th>
      <th>Hint2</th>
      <th>Hint3</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @menus.each do |menu| %>
      <tr>
        <td><%= menu.title %></td>
        <td><%= menu.recipe %></td>
        <td><%= menu.cooking_time %></td>
        <td><%= menu.image_url %></td>
        <td><%= menu.taste %></td>
        <td><%= menu.hint1 %></td>
        <td><%= menu.hint2 %></td>
        <td><%= menu.hint3 %></td>
        <td><%= link_to 'Show', menu %></td>
        <td><%= link_to 'Edit', edit_menu_path(menu) %></td>
        <td><%= link_to 'Destroy', menu, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

